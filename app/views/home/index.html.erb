<div class="header">
  <h1>Ideas, Yo!</h1>
</div>
<div class="row">
  <div class="search-box">
    <%= form_tag('#') do %>
      <%= label_tag(:search) %>
      <%= text_field_tag(:search) %>
    <% end %>
</div>
</div>
<div class="row">
  <div class="col-md-6">
    <div class="edit-instructions">
      <h4>Click on a title or body to edit</h4>
    </div>
    <div id="ideas">
    </div>
  </div>
  <div class="col-md-6 new-idea">
    <h2>
      Add a New Idea
    </h2>
    <%= form_tag("#") do %>
      <%= label_tag(:title) %>
      <%= text_field_tag(:newTitle) %>
      <%= label_tag(:body) %>
      <%= text_field_tag(:newBody) %>

      <%= submit_tag("Save", id: 'ideaSave') %>
    <% end %>
    <div class="empty-idea-message">
      Title and Body must be filled out.
    </div>
  </div>
</div>
