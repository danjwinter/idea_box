<h1>Ideas, Yo!</h1>
<div class="row">
  <%= form_tag('#') do %>
    <%= label_tag(:search) %>
    <%= text_field_tag(:search) %>
  <% end %>
</div>
<div class="row">
  <div class="col-md-6">
    <div id="ideas">
    </div>
  </div>
  <div class="col-md-6 new-idea">
    <%= form_tag("#") do %>
      <%= label_tag(:title) %>
      <%= text_field_tag(:newTitle) %>
      <%= label_tag(:body) %>
      <%= text_field_tag(:newBody) %>

      <%= submit_tag("Save", id: 'ideaSave') %>
    <% end %>
  </div>
</div>
